<div class="container">
  <p class="h2 text-center mt-4">Photos</p>
  <div class="row mt-4 ">
     <div class="col-md-4 mx-auto">
        <div class="myform form ">
         <form action='/photos/update/<%= infoFoto.id%>' method="post" name="add" enctype="multipart/form-data">
              <div class="form-group mt-2">
                 <input type="text" name="title" value='<%= infoFoto.titulo%>'  class="form-control" id="title" placeholder="Title" required="required">
              </div>
              <div class="form-group mt-2">
                 <input type="text" name="description" value='<%= infoFoto.descripcion%>' class="form-control" id="description" placeholder="Description" required="required">
              </div>
              <div class="form-group mt-2">
                 <input type="number" min="0" max="10" value='<%= infoFoto.calificacion%>' step="0.1" name="rate" id="rate"  class="form-control" placeholder="Rate" required="required">
              </div>
              <div class="form-group mt-2 text-center">
                 <input type="file" name="route" id="route" value='<%= infoFoto.ruta %>' accept=".png" required="required" />
              </div>
              <div class="text-center mt-4">
                 <button type="submit" class="btn btn-primary">Update</button>
              </div>
           </form>
        </div>
     </div>
  </div>
</div>
